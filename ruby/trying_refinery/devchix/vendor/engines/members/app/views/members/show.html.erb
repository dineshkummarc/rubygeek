<% content_for :body_content_title do %>
  <%= @member.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @member.name %>
    </p>
  </section>
  <section>
    <h1>Blog</h1>
    <p>
      <%=raw @member.blog %>
    </p>
  </section>
  <section>
    <h1>Twitter</h1>
    <p>
      <%=raw @member.twitter %>
    </p>
  </section>
  <section>
    <h1>Facebook</h1>
    <p>
      <%=raw @member.facebook %>
    </p>
  </section>
  <section>
    <h1>Profile</h1>
    <p>
      <%=raw @member.profile %>
    </p>
  </section>
  <section>
    <h1>Location</h1>
    <p>
      <%=raw @member.location %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="members">
      <% @members.each do |member| %>
        <li>
          <%= link_to member.name, member_path(member) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
