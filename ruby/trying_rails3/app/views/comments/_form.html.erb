<% form_for(@comment) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :post_id %><br />
    <%= f.text_field :post_id %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :posted_on %><br />
    <%= f.datetime_select :posted_on %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
