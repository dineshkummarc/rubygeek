<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Start at</th>
    <th>Description</th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%=h event.name %></td>
    <td><%=h event.start_at.to_s(:short) %></td>
    <td><%=h event.description %></td>
    <td><%= link_to 'Show', admin_event_path(event) %></td>
    <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
    <td><%= link_to 'Invitations', admin_event_invitations_path(event)%></td>
  </tr>
<% end %>
</table>

<br />

